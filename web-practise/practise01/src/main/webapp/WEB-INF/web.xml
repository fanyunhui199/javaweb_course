<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
        <servlet>
            <servlet-name>hello</servlet-name><!--设置本地servlet的名字-->
            <servlet-class>com.controller.HelloServlet</servlet-class><!--找到他的位置-->
        </servlet>
    <servlet-mapping><!--映射到tomcat的servlet上-->
        <servlet-name>hello</servlet-name><!--命名统一-->
        <url-pattern>/hello</url-pattern><!--设置访问地址-->
    </servlet-mapping>
</web-app>